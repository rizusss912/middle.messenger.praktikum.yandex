{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "### Откройте pull request в ветку main из ветки, где вы разрабатывали проект, и добавьте ссылку на этот pr в README.md в ветке main. Название pull request может быть любое.",
  "main": "index.js",
  "scripts": {
    "build": "./node_modules/.bin/parcel build src/index.html --out-dir dist",
    "deploy": "npm install && npm run build",
    "dev": "./node_modules/.bin/parcel src/index.html --out-dir dist",
    "start": "./node_modules/.bin/parcel build src/index.html --out-dir dist && node index.js",
    "eslint:fix": "eslint . --ext .ts --fix",
    "eslint": "eslint . --ext .ts",
    "stylelint": "npx stylelint '**/*.less'",
    "lint": "npm run eslint && npm run stylelint",
    "test": "jest --watch",
    "karma": "karma start --brower=Chrome karma.conf.js --auto-watch --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rizusss912/middle.messenger.praktikum.yandex.git"
  },
  "author": "Вадим Кошечкин <Rizus912@yandex.ru>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rizusss912/middle.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/rizusss912/middle.messenger.praktikum.yandex#readme",
  "dependencies": {
    "@webcomponents/custom-elements": "^1.4.3",
    "bower": "^1.8.12",
    "document-register-element": "^1.8.1",
    "express": "^4.17.1",
    "karma-jasmine": "^4.0.1",
    "regenerator-runtime": "^0.13.9",
    "resources": "^0.4.3",
    "tslint": "^6.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.3",
    "@webcomponents/webcomponentsjs": "^2.5.0",
    "eslint": "^7.30.0",
    "eslint-config-xo": "^0.37.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-spec-reporter": "0.0.32",
    "karma-typescript": "^5.5.1",
    "less": "^4.1.1",
    "mocha": "^9.0.3",
    "parcel": "^2.0.0-rc.0",
    "parcel-bundler": "^1.12.5",
    "parcel-plugin-nuke-dist": "^1.0.1",
    "sinon": "^11.1.2",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "ts-node": "^10.2.0",
    "ts-sinon": "^2.0.1",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": "^12.18.4"
  },
  "browserslist": [
    "last 3 and_chr versions",
    "last 3 chrome versions",
    "last 3 opera versions",
    "last 3 ios_saf versions",
    "last 3 safari versions"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.(js|ts|tsx)$": "ts-jest"
    },
    "roots": [
      "src"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  }
}
